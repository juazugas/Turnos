<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin_layout"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imImage"
            android:layout_width="92dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="0dp"
            android:src="@drawable/jzuriaga" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/imImage"
            android:layout_alignBottom="@+id/imImage"
            android:layout_alignEnd="@+id/imImage"
            android:background="@color/bkg_card"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="contact detail"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imImage"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="Full Name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Full extra large name longer than line"/>

        <TextView
            android:id="@+id/textPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imImage"
            android:layout_below="@id/textName"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="Position"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imImage"
            android:layout_toRightOf="@id/imImage"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="4dp"
            android:text="luser@email.com"
            android:textStyle="italic"
            android:autoLink="email"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


    </RelativeLayout>
</android.support.v7.widget.CardView>