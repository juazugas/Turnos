<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin_layout"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <TextView
            android:id="@+id/textSprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sa_green_semitrans"
            android:gravity="center_vertical|right"
            android:padding="2dp"
            android:text="Sprint #1"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="Week 1"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/textStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textImasdEu"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:padding="0dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="29-11-2014"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/white"
            tools:text="Start 29 nov. 2014. End 05 dec. 2014"
            android:clickable="false" />

        <com.defimak47.turnos.component.CircularImageView
            android:id="@+id/imImasdEu"
            android:layout_width="@dimen/card_shift_image_width"
            android:layout_height="@dimen/card_shift_image_height"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textWeek"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:src="@drawable/portrait"
            app:civ_border="true"
            app:civ_borderWidth="1dp"
            app:civ_shadow="true"
            app:civ_shadowColor="@color/sa_green_transparent" />

        <TextView
            android:id="@+id/textImasdEu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imImasdEu"
            android:layout_alignRight="@+id/imImasdEu"
            android:layout_below="@+id/imImasdEu"
            android:gravity="center_vertical|center_horizontal"
            android:text="fsantonja"
            android:singleLine="true"
            android:ellipsize="end"
            android:elevation="@dimen/elevation_medium"
            tools:text="fsantonja" />
        <!--android:textColor="@android:color/white"-->
        <!--android:background="@color/bkg_card"-->

        <com.defimak47.turnos.component.CircularImageView
            android:id="@+id/imImasdMx1"
            android:layout_width="@dimen/card_shift_image_width"
            android:layout_height="@dimen/card_shift_image_height"
            android:layout_below="@+id/textWeek"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:src="@drawable/portrait"
            app:civ_border="true"
            app:civ_borderWidth="1dp"
            app:civ_shadow="true"
            app:civ_shadowColor="@color/sa_green_transparent" />

        <TextView
            android:id="@+id/textImasdMx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imImasdMx1"
            android:layout_alignRight="@+id/imImasdMx1"
            android:layout_below="@+id/imImasdMx1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="14dp"
            android:text="rtribaldos"
            android:singleLine="true"
            android:ellipsize="end"
            android:elevation="@dimen/elevation_medium"
            tools:text="lmargareto" />
        <!--android:textColor="@android:color/white"-->
        <!--android:background="@color/bkg_card"-->

        <com.defimak47.turnos.component.CircularImageView
            android:id="@+id/imImasdMx2"
            android:layout_width="@dimen/card_shift_image_width"
            android:layout_height="@dimen/card_shift_image_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textWeek"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:src="@drawable/portrait"
            app:civ_border="true"
            app:civ_borderWidth="1dp"
            app:civ_shadow="true"
            app:civ_shadowColor="@color/sa_green_transparent" />

        <TextView
            android:id="@+id/textImasdMx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imImasdMx2"
            android:layout_alignRight="@+id/imImasdMx2"
            android:layout_below="@+id/imImasdMx2"
            android:gravity="center_vertical|center_horizontal"
            android:text="rtribaldos"
            android:singleLine="true"
            android:ellipsize="end"
            android:elevation="@dimen/elevation_medium"
            tools:text="jzuriaga" />
        <!--android:textColor="@android:color/white"-->
        <!--android:background="@color/bkg_card"-->

        <TextView
            android:text="EU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textImasdEu"
            android:layout_alignStart="@id/imImasdEu"
            android:layout_alignEnd="@id/imImasdEu"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_dark"
            android:alpha=".6"
            />

        <TextView
            android:text="MX1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textImasdMx1"
            android:layout_alignStart="@id/imImasdMx1"
            android:layout_alignEnd="@id/imImasdMx1"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_dark"
            android:alpha=".6"
            android:id="@+id/textView" />

        <TextView
            android:text="MX2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textImasdMx2"
            android:layout_alignStart="@+id/imImasdMx2"
            android:layout_alignEnd="@+id/imImasdMx2"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_dark"
            android:alpha=".6"
            />


        <TextView
            android:id="@+id/textPairing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textImasdMx2"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pairing: 1"
            android:visibility="gone" />


    </RelativeLayout>

</android.support.v7.widget.CardView>